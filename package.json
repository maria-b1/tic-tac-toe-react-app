{
  "name": "tic-tac-toe-react-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --fix --ext .js,.jsx",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "test": "jest",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "dependencies": {
    "canvas-confetti": "1.6.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@vitejs/plugin-react-swc": "3.2.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard-jsx": "11.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gh-pages": "5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "standard": "17.0.0",
    "vite": "^4.5.14"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/standard/eslintrc.json",
      "./node_modules/eslint-config-standard-jsx/eslintrc.json",
      "./node_modules/eslint-config-standard-react/eslintrc.json",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "eslintIgnore": [
    "dist/**",
    "dist-ssr/**"
  ],
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "semi": false,
    "trailingComma": "none"
  },
  "description": "![image](src/assets/screenshot.png)",
  "main": "vite.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maria-b1/tic-tac-toe-react-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maria-b1/tic-tac-toe-react-app/issues"
  },
  "homepage": "https://github.com/maria-b1/tic-tac-toe-react-app#readme"
}
